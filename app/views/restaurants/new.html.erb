<div>Add Restaurant</div> <br>

<%= form_for @restaurant do |f| %>
	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>

	<div class="field">
		<%= f.label :address %>
		<%= f.text_field :address %>
	</div>

	<div class="field">
		<%= f.label :city %>
		<%= f.text_field :city %>
	</div>

	<div class="field">
		<%= f.label :state %>
		<%= f.text_field :state %>
	</div>

	<div class="field">
		<%= f.label :zip %>
		<%= f.text_field :zip %>
	</div>

	<div class="field">
		<%= f.label :description %>
		<%= f.text_field :description %>
	</div> <br>

	<div class="actions">
		<%= f.submit "Add Restaurant" %>
	</div>
<% end %>

<% if @form_error %>
	<% @form_error.each do |error| %>
		<p><%= error %><p>
	<% end %>
<% end %>